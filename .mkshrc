
PS1='${USER:=$(id -un)}'"@${HOSTNAME:=$(hostname)}:\$PWD $(
	if (( USER_ID )); then print \$; else print \#; fi) "


export PATH="/usr/lib/ccache/:$PATH"
export CCACHE_DIR="$HOME/.ccache/ccache"

#Locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

alias acme=" acme -f $PLAN9/font/plan9fonts/terminus/ter-u14n.font"
alias cd=_cd

#Turns off the line editing so that editing the command line in 9term works (see 9term(1))
set +o emacs
set +o vi
set -a        # autoexport

# sets the current window label using awd  
# also helps 9term send correct plumbing messages.     
_cd () {
	\cd "$@" &&
    case "$TERM!$-" in
    linux!*)
         ;;
    *!*i*)
         awd
    esac
}

# plan9port
PLAN9=/usr/lib/plan9 export PLAN9
PATH=$PATH:$PLAN9/bin export PATH

#export LD_LIBRARY_PATH="/usr/lib"

extract() {
    if [ -z ${1} ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
        echo "Usage: extract <archive> [directory]"
        echo "Example: extract presentation.zip."
        echo "Valid archive types are:"
        echo "tar.bz2, tar.gz, tar.xz, tar, bz2, gz, tbz2,"
        echo "tbz, tgz, lzo, rar, zip, 7z, xz, txz, lzma and tlz"
    else
        case "$1" in
            *.tar.bz2|*.tbz2|*.tbz)         tar xvjf "$1" ;;
            *.tgz)                          tar zxvf "$1" ;;
            *.tar.gz)                       tar xvzf "$1" ;;
            *.tar.xz)                       tar xvJf "$1" ;;
            *.tar)                          tar xvf "$1" ;;
            *.rar)                          7z x "$1" ;;
            *.zip)                          unzip "$1" ;;
            *.7z)                           7z x "$1" ;;
            *.lzo)                          lzop -d  "$1" ;;
            *.gz)                           gunzip "$1" ;;
            *.bz2)                          bunzip2 "$1" ;;
            *.Z)                            uncompress "$1" ;;
            *.xz|*.txz|*.lzma|*.tlz)        xz -d "$1" ;;
            *) echo "Sorry, '$1' could not be decompressed." ;;
        esac
    fi
}

# make directory and cd there
mcd() { [[ "$1" ]] && mkdir -p "$1" && cd "$1"; }
